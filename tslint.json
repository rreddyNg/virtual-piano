{
  "extends": [
    "tslint:recommended",
    "tslint-angular",
    "tslint-config-prettier"
  ],
  "rulesDirectory": ["node_modules/codelyzer"],
  "rules": {
    "import-blacklist": [
      true,
      "lodash",
      "rxjs/Observable",
      "rxjs/BehaviorSubject",
      "rxjs/Subject",
      "rxjs/Subscription"
    ],
    "no-import-side-effect": true,
    "interface-name": [true, "never-prefix"],
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "curly": true,
    "forin": true,
    "interface-over-type-literal": true,
    "label-position": true,
    "member-access": [true, "no-public"],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-empty": false,
    "no-eval": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "prefer-const": true,
    "radix": true,
    "unepected-semicolon": false,
    "triple-equals": [true, "allow-null-check"],
    "unified-signatures": true,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ],
    "directive-selector": [true, "attribute", "asis", "camelCase"],
    "component-selector": [true, "element", "asis", "kebab-case"],
    "no-inputs-metadata-property": true,
    "no-outputs-metadata-property": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "cyclomatic-complexity": [true, 7],
    "adjacent-overload-signatures": true,
    "no-any": true,
    "no-null-keyword": true,
    "prefer-function-over-method": [
      true,
      "allow-public",
      "allow-protected"
    ],
    "no-invalid-this": [true, "check-function-in-method"],
    "new-parens": true,
    "prefer-method-signature": true,
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "no-return-await": true,
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "no-duplicate-variable": [true, "check-parameters"],
    "no-duplicate-imports": true,
    "no-require-imports": true,
    "no-default-export": true,
    "typedef": [true, "property-declaration"],
    "no-angle-bracket-type-assertion": true,
    "prefer-object-spread": true,
    "object-literal-shorthand": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "quotemark": [true, "single", "avoid-template", "avoid-escape"],
    "prefer-template": true,
    "use-isnan": true,
    "no-conditional-assignment": true,
    "prefer-conditional-expression": [true, "check-else-if"],
    "prefer-for-of": true,
    "switch-default": true,
    "no-duplicate-switch-case": true,
    "no-unsafe-finally": true,
    "encoding": true,
    "max-file-line-count": [true, 750],
    "max-classes-per-file": [true, 30],
    "no-redundant-jsdoc": true,
    "no-namespace": true,
    "no-internal-module": true,
    "no-useless-cast": false,
    "no-commented-code": false,
    "no-ignored-return": false,

    "semicolon": false,
    "newline-per-chained-call": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "any",
        "grouped-imports": false
      }
    ],
    "no-implicit-dependencies": false,
    "jsdoc-format": false,
    "template-i18n": false,
    "array-type": false,
    "no-unused-css": false,
    "template-use-track-by-function": false,
    "whitespace": false,

    "template-no-negated-async": false,
    "newline-before-return": false,
    "use-component-view-encapsulation": true,
    "contextual-lifecycle": true,
    "template-banana-in-box": true,
    "no-unnecessary-class": [
      true,
      "allow-static-only",
      "allow-empty-class"
    ],
    "no-dynamic-delete": true,
    "no-sparse-arrays": true,
    "no-identical-functions": false
  }
}
